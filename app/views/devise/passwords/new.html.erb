<% content_for :header do %>
  <%= render partial: 'layouts/app_header' %>
<% end %>
<div class="user-register">
  <div class="wrapper">
    <h1><%= t('.forgot_password') %></h1>
    <%= form_for(resource, as: resource_name, url: user_password_path, html: { method: :post }) do |f| %>
      <% if resource.errors.any? %>
        <div id="error_explanation">
          <ul class="errors">
            <% resource.errors.full_messages.each do |error| %>
            <li>
              <%= error %>
            </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :email, class: 'control-label sr-only' %>
        <%= f.email_field :email, autofocus: true, placeholder: t('.email_placeholder'), class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit t('.send_instructions'), class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
