<header>
  <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
  <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu">
          <span class="sr-only"><%= t('.toggle_navigation') %></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to root_path, class: 'navbar-brand' do %>
          <%= render partial: 'home/logo', locals: { fill: '#fff' } %>
        <% end %>
      </div>

      <form class="navbar-form navbar-right" action="/search" method="get" role="search">
        <div class="form-group">
          <input type="text" name="m" value="<%= @query %>" placeholder="<%= t('.favourite_genre') %>" class="form-control">
        </div>
        <button type="submit" class="btn btn-default sr-only"><%= t('.submit') %></button>
      </form>
      <div class="collapse navbar-collapse" id="menu">
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to t('.what_is_this'), '#' %>
          </li>
          <% if user_signed_in? %>
            <li>
              <%= link_to t('.my_collection'), lists_path %>
            </li>
            <li>
              <%= link_to t('.logout'), destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to t('.login_register'), new_user_registration_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
