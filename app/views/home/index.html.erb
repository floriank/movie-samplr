<div class="intro">
  <%= render partial: 'logo' %>
  <div class="hero">
    <div class="wrapper">
      <h1 class="catchy"><%= t('.hero_intro') %> <br><small><%= t('.hero_intro_sub') %></small></h1>
    </div>
  </div>
  <div class="options">
    <div class="wrapper">
      <form action="/search" action="get" class="form">
        <label for="movie" class="control-label sr-only"><%= t('.favourite_movie') %></label>
        <input name="m" class="form-control" required type="text" id="movie" placeholder="<%= t('.favourite_movie') %>">
        <input type="submit" id="submit" class="sr-only" value="Search">
      </form>
      <% if user_signed_in? %>
        <h3 class="welcome-back"><%= t('.welcome_back') %></h3>
        <%= link_to t('.go_to_collection'), lists_path, class: 'btn btn-default', id: 'collection-link' %>
      <% else %>
        <%= link_to ('.go_to_login'), new_user_session_path %>
      <% end %>
    </div>
  </div>
</div>

