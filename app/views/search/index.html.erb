<% content_for :header do %>
  <%= render partial: 'layouts/app_header' %>
<% end %>
<div class="search-result">
  <% if @imdb_results.any? %>
    <div class="query">
      <h1><%= t('.search_result_for', query: @query) %></h1>
      <p><%= t('.search_result_explanation') %></p>
    </div>
    <div class="imdb-results">
      <h2><%= t('.search_results_imdb') %></h2>
      <p><%= t('.search_results_imdb_explanation') %></p>
      <%= render partial: 'list', locals: { movies: @imdb_results } %>
    </div>
  <% else %>
    <div class="no-results">
      <h1><%= t('.no_results') %></h1>
      <p><%= t('.no_results_explanation') %></p>
    </div>
  <% end %>
</div>
